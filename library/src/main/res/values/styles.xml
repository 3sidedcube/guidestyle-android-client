<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="GuideStyleBody">
		<item name="android:textColor">@color/guidestyle_black</item>
		<item name="android:textSize">10sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="GuideStyleHeader">
		<item name="android:textSize">20sp</item>
		<item name="lineHeight">28dp</item>
		<item name="android:background">@color/guidestyle_black</item>
		<item name="textAllCaps">true</item>
		<item name="android:textAlignment">center</item>
		<item name="android:textColor">@color/guidestyle_white</item>
	</style>

	<style name="GuideStyleCaption">
		<item name="android:textColor">@color/guidestyle_white</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">10sp</item>
		<item name="android:background">@color/guidestyle_black</item>
		<item name="android:paddingVertical">2dp</item>
		<item name="android:paddingHorizontal">6dp</item>
	</style>

	<style name="Button">
		<item name="background">@color/red</item>
	</style>
</resources>